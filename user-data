install:
  reboot: false
  poweroff: false
stylus:
  trace: true
  site:
    paletteEndpoint: ""
    registrationURL: ""
    edgeHostToken: ""
stages:
  before-install:
    - name: "Remove machine-id"
      if: '[ -f "/run/cos/live_mode" ]'
      commands:
      - echo -n > /etc/machine-id
  after-install.after:
    - files:
        - path: /var/run/.stylus-installed
          content: ""
          permissions: 0777
  initramfs:
    - users:
        kairos:
          groups:
            - sudo
          passwd: kairos
